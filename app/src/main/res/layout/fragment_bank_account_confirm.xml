<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".BankAccountConfirm">


    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3" app:layout_constraintGuide_begin="171dp"
                                                android:orientation="vertical"/>
    <TextView
            android:text="acc NO."
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="140dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:textSize="18sp" android:gravity="center"/>
    <EditText
            android:layout_width="226dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="140dp" android:id="@+id/acc_no_et" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:hint="acc.No"/>
    <TextView
            android:text="@string/password"
            android:layout_width="150dp"
            android:layout_height="55dp" tools:layout_editor_absoluteY="207dp"
            android:id="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0" android:textSize="18sp"
            android:gravity="center"/>
    <TextView
            android:text="account info"
            android:layout_width="319dp"
            android:layout_height="63dp"
            android:id="@+id/textView10" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" android:gravity="center" android:textSize="18sp"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="226dp"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/acc_password_et" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/acc_no_et"
            android:layout_marginTop="12dp" android:hint="acc. password"/>
    <Button
            android:text="Confirm"
            android:layout_width="210dp"
            android:layout_height="52dp"
            android:id="@+id/acc_confirm_btn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/acc_password_et" app:layout_constraintHorizontal_bias="0.397"/>
</androidx.constraintlayout.widget.ConstraintLayout>