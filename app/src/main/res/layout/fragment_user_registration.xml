<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".UserRegistration">


    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="162dp"
                                                android:orientation="vertical"/>
    <TextView
            android:text="User name"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:textSize="18sp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <TextView
            android:text="Password"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="12dp"
            android:textSize="18sp"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/u_name_et" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.263"
            android:hint="user name"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/user_type_rg"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/user_password_et" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/u_name_et"
            android:layout_marginTop="12dp" app:layout_constraintHorizontal_bias="0.0" android:hint="password"/>
    <TextView
            android:text="Confirm pass"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.833" android:textSize="18sp"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirm_p_et" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/user_password_et" android:layout_marginTop="12dp"
            android:hint="password"/>
    <TextView
            android:text="ID No"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginTop="12dp"
            android:textSize="18sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_no_et" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/confirm_p_et" android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.0" android:hint="ID number" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Submit"
            android:layout_width="184dp"
            android:layout_height="57dp"
            android:id="@+id/submit_btn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="248dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintVertical_bias="0.363" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.175"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4" app:layout_constraintGuide_begin="365dp"
                                                android:orientation="horizontal"/>
    <TextView
            android:text="User Type"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/textView13" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent" android:gravity="center"
            android:textSize="18sp"/>
    <RadioGroup
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:id="@+id/user_type_rg" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent">
        <RadioButton
                android:text="traveller"
                android:layout_width="85dp"
                android:layout_height="50dp" android:id="@+id/traveller_rb" android:layout_weight="1"/>
        <RadioButton
                android:text="driver"
                android:layout_width="85dp"
                android:layout_height="50dp" android:id="@+id/driver_rb" android:layout_weight="1"/>

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>