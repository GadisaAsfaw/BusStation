<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".LoginFragment">


    <TextView
            android:text="User name"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="152dp"
            app:layout_constraintHorizontal_bias="1.0" android:textSize="18sp" android:textAlignment="center"
            android:gravity="center"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="193dp"
                                                android:orientation="vertical"/>
    <TextView
            android:text="Password"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="1.0" android:textSize="18sp" android:textAlignment="center"
            android:gravity="center"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/user_name_et"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:hint="user name"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="152dp"
    />
    <EditText
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/user_password_et"
            android:hint="password"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/user_name_et"/>
    <Button
            android:layout_width="208dp"
            android:layout_height="57dp"
            android:id="@+id/login_btn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.566"
            android:text="@string/login" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/user_password_et"/>
    <TextView
            android:text="sign up"
            android:layout_width="234dp"
            android:layout_height="40dp"
            android:id="@+id/signup_tv" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.602" android:textSize="18sp" android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/login_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>