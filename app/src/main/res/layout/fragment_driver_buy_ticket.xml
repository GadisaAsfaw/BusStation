<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".DriverBuyTicket">


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="175dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/textView20" android:id="@+id/start_rv"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline6" app:layout_constraintGuide_begin="205dp"
                                                android:orientation="vertical"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="175dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline6" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView21" android:id="@+id/destination_rv"/>
    <TextView
            android:text="Start"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:id="@+id/textView20" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="52dp"
            app:layout_constraintHorizontal_bias="0.0" android:gravity="center" android:textStyle="bold"/>
    <TextView
            android:text="Destination"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:id="@+id/textView21"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:gravity="center" android:textStyle="bold"/>
    <EditText
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/time_et" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline6"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView23" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/date_et"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/textView22"/>
    <TextView
            android:text="Date"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:id="@+id/textView22" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/start_rv" app:layout_constraintHorizontal_bias="0.0"
            android:gravity="center" android:textStyle="bold"/>
    <TextView
            android:text="Time"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:id="@+id/textView23" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline6" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/destination_rv"
            app:layout_constraintHorizontal_bias="0.0" android:gravity="center" android:textStyle="bold"/>
    <Button
            android:text="Buy"
            android:layout_width="209dp"
            android:layout_height="53dp"
            android:id="@+id/buy_btn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/time_et"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.014"/>
</androidx.constraintlayout.widget.ConstraintLayout>